
@{
    ViewBag.Title = "Enrollments";
}
@section scripts {
    <script src="~/Scripts/custom/enrollment.js"></script>
}

<main class="container">
    <div class="row align-items-center mb-4">
        <div class="col-6">
            <h1>Enrollments</h1>
        </div>
        <div class="col-6 text-end">
            <div class=" align-middle">
                <p class="m-0 text-muted">Department:</p> <span class="badge text-bg-primary">@ViewBag.Employee.Department.Title</span>
            </div>
        </div>
    </div>

    <form id="enrollmentForm">
        <div class="table-responsive p-2">
            <table id="enrollmentTable" class="table table-borderless table-hover pb-4">
                <thead class="bg-light">
                    <tr class="align-middle">
                        <th class="rounded-start border-end">Status</th>
                        <th>Training</th>
                        <th>Deadline</th>
                        <th>Department Priority</th>
                        <th class="border-end">Capacity</th>
                        <th>Employee</th>
                        <th>Email</th>
                        <th class="border-end text-nowrap">Phone Number</th>
                        <th class="rounded-end text-end">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Enrollment in ViewBag.Enrollments)
                    {
                        <tr>
                            <td class="rounded-start">
                                @if (@Enrollment.Status.ToString() == "Approved")
                                {<span class="badge text-bg-success">Approved</span> }
                                else if (@Enrollment.Status.ToString() == "Declined")
                                { <span class="badge text-bg-danger">Declined</span> }
                                else
                                { <span class="badge text-bg-warning">Pending</span>}
                            </td>
                            <td>@Enrollment.Training.Title</td>
                            <td>@Enrollment.Training.Deadline.ToString("dd MMM yyyy")</td>
                            <td>
                                @if (Enrollment.Training.PriorityDepartment != null)
                                {@Enrollment.Training.PriorityDepartment.Title}
                            else
                            { <p class="opacity-25 m-0">None</p>}
                            </td>
                            <td>@Enrollment.Training.Capacity</td>
                            <td class="text-nowrap">@Enrollment.Employee.FirstName @Enrollment.Employee.LastName</td>
                            <td>@Enrollment.Employee.Email</td>
                            <td>@Enrollment.Employee.PhoneNumber</td>
                            <td class="rounded-end text-end">
                                <div class="d-flex justify-content-end">
                                    @Html.ActionLink("View", "View", "Enrollment", new { @id = Enrollment.EnrollmentId }, new { @class = "btn btn-sm btn-outline-primary" })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</main>

