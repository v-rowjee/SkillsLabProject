@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.ErrorName</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        * {
            font-family: Verdana;
        }
    </style>
</head>
<body>
    <main class="d-flex align-items-center justify-content-center vh-100">
        <div class="text-center">
            <h1 class="display-1 fw-bold">@ViewBag.ErrorCode</h1>
            <p class="fs-3"> <span class="text-danger">Opps!</span>@ViewBag.ErrorName</p>
            <p class="lead">
                @ViewBag.ErrorDetail
            </p>
            @Html.ActionLink("Go Back", "Index", "Home", null, new { @class = "btn btn-primary" })
        </div>
    </main>
</body>
</html>