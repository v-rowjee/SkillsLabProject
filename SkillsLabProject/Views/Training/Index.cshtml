
@{
    ViewBag.Title = "Training" + Session["CurrentRole"];
}
@section scripts {
    <script src="~/Scripts/training.js"></script>
}

<div class="container">
    <div class="row align-items-center mb-4">
        <div class="col-6">
            <h1>Trainings</h1>
        </div>
        @if (ViewBag.CurrentRole == "Admin")
        {
            <div class="col-6 text-end">
                @Html.ActionLink("Add Training", "Create", "Training", null, new { @class = "btn btn-primary" })
            </div>
        }
    </div>
    <div class="table-responsive p-2">
        <table id="trainingTable" class="table table-borderless table-hover pb-4">
            <thead>
                <tr style="vertical-align: middle">
                    <th>Title</th>
                    <th>Deadline</th>
                    <th>Department Priority</th>
                    <th>Capacity</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Training in ViewBag.Trainings)
                {
                    <tr>
                        <td>@Training.Title</td>
                        <td>@Training.Deadline.ToString("ddd, dd MMM yyyy hh:mm tt")</td>
                        <td>@(Training.PriorityDepartment != null ? @Training.PriorityDepartment.Title : "-")</td>
                        <td>@Training.Capacity</td>
                        <td class="d-inline-flex d-lg-block text-end">
                            @Html.ActionLink("View", "View", "Training", new { @id = Training.TrainingId }, new { @class = "btn btn-sm btn-outline-primary" })
                            @if (ViewBag.CurrentRole == "Admin")
                            {
                                @Html.ActionLink("Edit", "Edit", "Training", new { @id = Training.TrainingId }, new { @class = "btn btn-sm btn-outline-secondary ms-2" })
                                <button class="btn btn-sm btn-outline-danger ms-2" onclick="deleteTraining(@Training.TrainingId)">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

