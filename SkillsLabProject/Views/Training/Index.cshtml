
@{
    ViewBag.Title = "Training" + Session["CurrentRole"];
}
@section scripts {
    <script src="~/Scripts/training.js"></script>
}

<div class="container">
    <div class="row align-items-center mb-4">
        <div class="col-6">
            <h1>Trainings</h1>
        </div>
        @if (ViewBag.CurrentRole == "Admin" || ViewBag.CurrentRole == "Manager")
        {
            <div class="col-6 text-end">
                @Html.ActionLink("Add Training", "Create", "Training", null, new { @class = "btn btn-primary" })
            </div>
        }
    </div>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Deadline</th>
                    <th scope="col">Department Priority</th>
                    <th scope="col" class="text-center">Capacity</th>
                    <th scope="col" class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Training in ViewBag.Trainings)
                {
                    <tr>
                        <td>@Training.Title</td>
                        <td>@Training.Deadline.ToString("ddd, dd MMM yyyy hh:mm tt")</td>
                        <td>@(Training.PriorityDepartment != null ? @Training.PriorityDepartment.Title : "-")</td>
                        <td class="text-center">@Training.Capacity</td>
                        <td class="text-end">
                            @Html.ActionLink("View", "View", "Training", new { @id = Training.TrainingId }, new { @class = "btn btn-sm btn-outline-primary me-2" })
                            @if (ViewBag.CurrentRole == "Admin" || ViewBag.CurrentRole == "Manager")
                            {
                                @Html.ActionLink("Edit", "Edit", "Training", new { @id = Training.TrainingId }, new { @class = "btn btn-sm btn-outline-secondary me-2" })
                                <button class="btn btn-sm btn-outline-danger" onclick="deleteTraining(@Training.TrainingId)">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

